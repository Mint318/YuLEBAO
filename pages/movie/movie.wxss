.top-nav {
  height: 90rpx;
  border-bottom: 1px solid #e6e6e6;
}

.top-nav-inner {
  display: flex;
  align-items: center;
  height: 90rpx;
  justify-content: space-between;
}
/* 自动定位城市容器 */
.city-entry {
  padding-left: 30rpx;
  display: flex;
  align-items: center;
  font-size: 15px;
  color: #666;
}
/* 自动定位城市名称 */
.city-entry .city-name {
  max-width: 140rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
/* 自动定位城市箭头 */
.city-entry .city-entry-arrow{
  width: 0;
  height: 0;
  border: 8rpx solid #b0b0b0;
  border-left-color: transparent;
  border-right-color: transparent;
  border-bottom-color: transparent;
  display: inline-block;
  margin-left: 8rpx;
  margin-top: 10rpx;
}
/* 选项卡开始 */
.switch-hot{
  display: flex;
  position: relative;
  justify-content: space-around;
  height: 90rpx;
  line-height: 90rpx;
}
.hot-item-active:after {
  content: "";
  display: block;
  position: absolute;
  z-index:99;
  bottom: -1px;
  width: 80rpx;
  border-radius: 0px;
  height: 4rpx;
  background-color: #f03d37;
  transition: left .2s;
}
.switch-hot .hot-item {
  margin: 0 10rpx;
  width: 80rpx;
  font-size: 30rpx;
  color: #666;
  text-align: center;
  font-weight: 500;
  letter-spacing: 4rpx;
  cursor: pointer;
}
/* 搜索图标 */
.search-icon {
  width: 40rpx;
  height: 40rpx;
  background-size: 40rpx;
  padding: 20rpx 30rpx 20rpx 20rpx;
  background-position: 20rpx;
}
/* 主要区域 */
.main-container{
  background-color: #fff;
}
/* 影片信息 */
.movie-item{
  margin:0 20rpx;
  background-color: #fff;
  border-bottom:2rpx solid #e5e5e5;
}
/* 影片图片容器 */
.movie-item .movie-item-avatar{
  width: 128rpx;
  height: 180rpx;
  position: relative;
  margin-top: 24rpx;
  float: left;
}
.movie-item .movie-item-avatar image{
  width: 100%;
  height: 180rpx;
  border-radius: 4rpx;
}
/* 影片内容容器 */
.movie-item .movie-item-content-wrapper{
  padding: 24rpx 28rpx 24rpx 0;
  margin-left: 148rpx;
  height: 180rpx;
  max-height: 180rpx;
  position: relative;
}
.movie-item .movie-item-content-wrapper .content{
  padding-right: 10rpx;
  margin-right: 96rpx;
  overflow: hidden;
}
.movie-item .movie-item-content-wrapper .content .title{
  max-height: 52rpx;
  margin-bottom: 14rpx;
  line-height: 52rpx;
  font-size: 34rpx;
  color: #333;
  overflow: hidden;
}
.movie-item .movie-item-content-wrapper .content .line-ellipsis{
  margin-top: 30rpx;
  line-height: 30rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  font-size: 26rpx;
  color: #666;
}
.movie-item .movie-item-content-wrapper .score-wrapper{
  font-size: 24rpx;
  position: absolute;
  right: 0;
  top: 26rpx;
  height: 54rpx;
  margin: auto;
}
.movie-item .movie-item-content-wrapper .score{
  width: 94rpx;
  height: 54rpx;
  line-height: 56rpx;
  text-align: center;
  box-sizing: border-box;
  background-color: #f03d37;
  color: #fff;
  border-radius: 8rpx;
  white-space: nowrap;
  font-size: 12px;
  cursor: pointer;
}
