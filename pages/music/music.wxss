/* pages/music/music.wxss */
/* banner图的样式 */
.banner{
  width: 100%;
  height: 300rpx;
}
/* banner图下image组件的样式 */
.banner  image{
  width: 100%;
  height: 100%;
}
/* 搜索框样式 */
.ser{
  width: 90%;
  margin-left: 5%;
  height: 100rpx;
  /* 距离轮播图组件距离 */
  margin-top:15rpx;
  border: 4rpx solid #A9A9A9;
  /* 圆角 */
  border-radius: 25px;
}
.it{
  width: 60%;
  height: 100%;
  line-height: 100%;
  /* 文本距离边框位置 */
  padding-left: 35rpx;
  margin-left: 15rpx;
  /* 字体颜色 */
  color: #A9A9A9;
  /* 字体的样式 */
  font-family: '楷体';

}
/* 搜索框图片 */
.ser image{
  width: 80rpx;
  height: 80rpx;
  /* 通过相对定位方式 */
  position: relative;
  top:-95rpx;
  left: 580rpx;
}
/* 音乐列表 */
.list{
  width: 100%;
  height: 200rpx;
  border: 2px solid #A9A9A9;
  margin-top: 30rpx;
  border-top-left-radius: 50%;
  box-shadow: 15rpx 15rpx 15rpx #000000;
  border-bottom-right-radius: 50%;
  background-color: rgb(219, 220, 223);
  /* border-top-right-radius: 50%; */
}
.list .one{
  width: 200rpx;
  height: 100%;
  float: left;
}
.list .one image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.list .two{
  width: 300rpx;
  height: 100%;
  float: left;
  color: #0c0c0c;
  margin-left: 15rpx;
}
.list .three{
  width: 200rpx;
  height: 100%;
  float: right;
}
.list .three image{
  width: 50%;
  height: 50%;
  position: relative;
  top:50rpx;
  left:50rpx;
}